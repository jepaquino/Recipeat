<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hometext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="64dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="436dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        tools:layout_editor_absoluteX="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="400dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#9fd2ff"
            app:cardCornerRadius="25dp">

            <ImageView
                android:layout_width="390dp"
                android:layout_height="145dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:alpha=".20"
                android:background="@drawable/morning" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="70dp" />

            <TextView
                android:id="@+id/morningtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:layout_marginLeft="220dp"
                android:text="Breakfast" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/breakfast" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="400dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#ffc26c"
            app:cardCornerRadius="25dp">

            <ImageView
                android:layout_width="390dp"
                android:layout_height="145dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:alpha=".20"
                android:background="@drawable/lunch" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="70dp"
                android:text="Go" />

            <TextView
                android:id="@+id/lunchtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:layout_marginLeft="270dp"
                android:text="Lunch" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/meat" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="400dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#ff7a8a"
            app:cardCornerRadius="25dp">

            <ImageView
                android:layout_width="390dp"
                android:layout_height="145dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:alpha=".20"
                android:background="@drawable/dinner" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="70dp"
                android:text="Go" />

            <TextView
                android:id="@+id/dinnertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:layout_marginLeft="270dp"
                android:text="Dinner" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/wine" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="419dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="8dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:background="@color/green"
            app:srcCompat="@drawable/home" />

        <TextView
            android:id="@+id/homeictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="75dp"
            android:text="Home"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="96dp"
            android:layout_height="86dp"
            android:layout_marginLeft="110dp"
            android:background="@color/green"
            app:srcCompat="@drawable/lab" />

        <TextView
            android:id="@+id/labictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="75dp"
            android:text="Food Lab"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="210dp"
            android:background="@color/green"
            app:srcCompat="@drawable/recipes" />

        <TextView
            android:id="@+id/recipeictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="75dp"
            android:text="Recipes"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="96dp"
            android:layout_height="86dp"
            android:layout_marginLeft="310dp"
            android:background="@color/green"
            app:srcCompat="@drawable/inventory" />

        <TextView
            android:id="@+id/stockictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="75dp"
            android:text="Stocks"
            android:textSize="18dp" />
    </android.support.design.widget.BottomNavigationView>


</android.support.constraint.ConstraintLayout>